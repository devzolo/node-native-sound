{
  "compilerOptions": {
    "target": "es6",
    "lib": ["ES6"],
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "@devzolo/node-native-sound": ["./src/"],
      "~/*": ["./src/*"]
    },
    "typeRoots": ["./node_modules/@types", "./src/@types"],
    "esModuleInterop": true
  },
  "include": ["./src/**/*"],
  "exclude": ["./src/**/__test__"]
}
