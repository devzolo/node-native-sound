{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "ES6"
    ],
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "native-sound": ["./src"]
    },
    "typeRoots": ["./node_modules/@types", "./src/@types"],
    "esModuleInterop": true
  },
  "include": ["./src/**/*"],
  "exclude": ["./src/**/__test__"]
}
